<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SchemaCreator.UI.Views"
    xmlns:viewmodels="clr-namespace:SchemaCreator.UI.ViewModel">
    <DataTemplate DataType="{x:Type viewmodels:RectangleViewModel}">
        <Ellipse
            Fill="red"
            IsHitTestVisible="false"
            ToolTip="Ellipse" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:CircleViewModel}">
        <Ellipse
            Fill="Blue"
            IsHitTestVisible="false"
            ToolTip="Ellipse" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:LineViewModel}">
        <Line
            Fill="White"
            SnapsToDevicePixels="False"
            Stretch="Fill"
            Stroke="White"
            StrokeThickness="2"
            X1="{Binding X1}"
            X2="{Binding X2}"
            Y1="{Binding Y1}"
            Y2="{Binding Y2}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:PolyLineViewModel}">
        <Polyline
            Fill="Red"
            Points="{Binding DrawingPoints}"
            SnapsToDevicePixels="False"
            Stretch="Fill"
            Stroke="White"
            StrokeThickness="3" />
    </DataTemplate>
</ResourceDictionary>